{
  "name": "tellstick-adapter",
  "display_name": "Tellstick",
  "version": "0.1.0",
  "description": "Telldus Tellstick adapter for Mozilla WebThings Gateway",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --listEmittedFiles",
    "lint": "eslint --ext .ts src",
    "test": "mocha \"test/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/majori/tellstick-adapter.git"
  },
  "author": "Antti Kivim√§ki",
  "license": "MIT",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "tellstick",
    "telldus"
  ],
  "bugs": {
    "url": "https://github.com/majori/tellstick-adapter/issues"
  },
  "homepage": "https://github.com/majori/tellstick-adapter",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.7.4",
    "@types/sinon": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "gateway-addon": "git+https://github.com/mozilla-iot/gateway-addon-node.git",
    "mocha": "^6.2.1",
    "nock": "^11.7.0",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "manifest.json",
    "dist/index.js",
    "dist/adapter.js",
    "dist/constants.js",
    "dist/properties/index.js",
    "dist/properties/level.js",
    "dist/properties/on-off.js",
    "dist/devices/index.js",
    "dist/devices/dimmer.js",
    "dist/devices/switch.js",
    "dist/clients/index.js",
    "dist/clients/telldus-core.js",
    "dist/clients/local-api.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "properties": {
        "client": {
          "type": "string",
          "enum": [
            "local-api",
            "telldus-core"
          ],
          "default": "local-api"
        }
      },
      "required": [
        "client"
      ],
      "dependencies": {
        "client": {
          "oneOf": [
            {
              "properties": {
                "client": {
                  "enum": [
                    "local-api"
                  ]
                },
                "url": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                }
              },
              "required": [
                "url",
                "token"
              ]
            },
            {
              "properties": {
                "client": {
                  "enum": [
                    "telldus-core"
                  ]
                },
                "socket": {
                  "type": "string",
                  "default": "/tmp/TelldusClient"
                }
              },
              "required": [
                "socket"
              ]
            }
          ]
        }
      }
    }
  }
}
