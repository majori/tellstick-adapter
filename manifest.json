{
  "manifest_version": 1,
  "id": "tellstick-adapter",
  "name": "Tellstick",
  "short_name": "Tellstick",
  "version": "0.2.0",
  "description": "Telldus Tellstick adapter for Mozilla WebThings Gateway",
  "homepage_url": "https://github.com/majori/tellstick-adapter",
  "license": "MIT",
  "author": "Antti Kivim√§ki",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "client": {
          "type": "string",
          "enum": ["local-api", "telldus-core"],
          "default": "local-api"
        }
      },
      "required": ["client"],
      "dependencies": {
        "client": {
          "oneOf": [
            {
              "properties": {
                "client": {
                  "enum": ["local-api"]
                },
                "url": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                }
              },
              "required": ["url", "token"]
            },
            {
              "properties": {
                "client": {
                  "enum": ["telldus-core"]
                },
                "socket": {
                  "type": "string",
                  "default": "/tmp/TelldusClient"
                }
              },
              "required": ["socket"]
            }
          ]
        }
      }
    }
  }
}
